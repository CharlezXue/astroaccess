---
import { getCollection } from 'astro:content';
import DefaultLayout from '../../layouts/DefaultLayout.astro'
import Pagination from '../../components/Pagination.astro';
import { Card } from 'accessible-astro-components'

export async function getStaticPaths({ paginate }) {
  const blogEntries = await getCollection('posts');
  return paginate(blogEntries, { pageSize: 9 })
}
const base = import.meta.env.BASE_URL;
const { page } = Astro.props
---

<DefaultLayout
  title="故事"
>
  <section class="my-12">
    <div class="space-content container">
      <h1>故事</h1>
    </div>
  </section>
  <section class="my-12">
    <div class="container">
      <!-- <p class="text-sm"><em>Post {page.start + 1} through {page.end + 1} of {page.total} total posts</em></p> -->
      <main id="main-content">
      <ul class="my-3">
        {
          page.data.map((post) => (
            <li>
              <Card
                url={base + `/posts/${post.slug}/`}
                title={post.data.title}
                footer=''
              >
                {post.data.description}
              </Card>
            </li>
          ))
        }
      </ul>
      </main>
      <div class="mt-12 grid place-content-center">
        <Pagination
          firstPage={page.url.prev ? base + '/posts' : null}
          previousPage={page.url.prev ? base + page.url.prev : null}
          nextPage={page.url.next ? base + page.url.next : null}
          lastPage={page.url.next ? base + `/posts/${Math.ceil(page.total / page.size)}` : null}
          currentPage={page.currentPage}
          totalPages={Math.ceil(page.total / page.size)}
        />
      </div>
    </div>
  </section>
</DefaultLayout>

<style lang="scss">
  ul {
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 4rem;

    @media (min-width: 550px) {
      grid-template-columns: repeat(2, 1fr);
      grid-gap: 2rem;
    }

    @media (min-width: 950px) {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
