---
// import { getCollection } from 'astro:content';
const { src = '/astronaut-hero-img.webp' } = Astro.props;
// const blogEntries = await getCollection('posts');

---

<section class="hero my-24">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-16 md:grid-cols-2">
      <div class="flex flex-col items-center gap-8 lg:items-start">
        <h1 class="text-center text-6xl lg:text-left lg:text-8xl">
          <span class="text-gradient">自倡导</span>是
          <div><span id="def">什么？</span><sup><a id="switch-def" class="text-3xl lg:text-5xl" href="#">🔄</a></sup></div>
        </h1>
      </div>
      <div>
        <img width="100%" src={src} alt="" decoding="async" />
      </div>
    </div>
  </div>
</section>
<script is:inline data-astro-rerun>
  // Find all buttons with the `alert` class on the page.
  document.querySelector('#switch-def').addEventListener('click', 
  (event) => {
    event.preventDefault();
    document.querySelector('#def').textContent = [
    "为自己说话",
    "追求个人权利",
    "主动争取需求",
    "代表自身利益",
    "实现个人价值",
    "主动争取资源",
    "追求平等和公平",
    "影响社会变革",
    "推动意识提高",
    "改变不公正现状"
  ].at(Math.floor(Math.random() * 10));
  });
</script>
<style lang="scss">
  .text-gradient {
    background: linear-gradient(315deg, var(--primary-200), var(--secondary-500));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  :global(.darkmode .text-gradient) {
    background: linear-gradient(315deg, var(--secondary-400), var(--primary-200));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  #switch-def{
    text-decoration: none;
  }
</style>
