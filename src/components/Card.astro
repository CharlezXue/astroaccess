---
const { url = '#', img = 'https://fakeimg.pl/640x360', title = 'Default title', footer = 'Your name' } = Astro.props
---

<div class="card">
  <div class="card__image">
    <img src={img} alt="" />
  </div>
  <div class="card__content">
    <h3>
      <a href={url}>{title}</a>
    </h3>
    <p>
      <slot>Default description.</slot>
    </p>
    <small>
      {footer}
    </small>
  </div>
</div>

<style is:global>
  .card {
    display: flex;
    flex-direction: column;
    border: 2px solid var(--action-color);
    border-radius: 0.5rem;
    max-width: 60ch;
    min-height: 100%;
    position: relative;
    overflow: hidden;
    transition: box-shadow 0.15s ease-in-out;
  }

  .card:hover,
  .card:focus-within {
    box-shadow: 0 0 0 0.25rem var(--action-color);
  }

  .card:focus-within a:focus {
    text-decoration: none;
    box-shadow: none;
    outline: none;
  }

  .card__image {
    height: 100%;
    padding: 0.5rem;
  }

  .card__image img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  .card__content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    padding: 0.5rem;
  }

  .card__content h3 a {
    color: var(--font-color);
    text-decoration: none;
  }

  .card__content a:hover {
    text-decoration: underline;
  }

  .card__content h3 a::after {
    content: '';
    position: absolute;
    inset: 0;
  }

  .card__content:last-child {
    padding-top: 0;
  }
</style>
