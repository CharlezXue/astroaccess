    mute: '静音',
    unmute: '取消静音',
    enableCaptions: '启用字幕',
    disableCaptions: '禁用字幕',
    download: '下载',
    enterFullscreen: '进入全屏',
    exitFullscreen: '退出全屏',
    frameTitle: '{title} 的播放器',
    captions: '字幕',
    settings: '设置',
    pip: '画中画',
    menuBack: '返回上一页菜单',
